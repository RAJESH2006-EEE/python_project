from abc import ABC,abstractmethod

class Theater(ABC): //The class file Cinema is change as Theater
    def __init__(self,movie_name,seat_no,):
        self.movie_name=movie_name
        self.seat_no=seat_no
        self.__price=0
    def get_price(self):
        return self.__price
    def set_price(self,price):
        self.__price=price
    @abstractmethod
    def calculate_ticket(self):
        pass
    def show_time(self):
        print(f"movie_name={self.movie_name},seat_no={self.seat_no},price={self.__price}")
class Noramlticket(Cinema):
    def calculate_ticket(self):
        self.set_price(100)//the normal ticket amount is decrease as 50 rupee
        print("ticket is booked successfully")
class Premiumticket(Theater)://if we want to access the parent we use the parent class name but now is changed as Theater
    def calculate_ticket(self):
        self.set_price(5000)//the premium ticket amount is raise as 5000
        print("ticket is booked successfully")
ob1=Premiumticket("coolie","A0")//movie name is changed as coolie
ob1.calculate_ticket()
ob1.show_time()
